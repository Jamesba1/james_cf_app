<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p class="thumbnail">
  <!-- <strong>Image url:</strong> -->
  <!-- <= @product.image_url %> -->
  <%= image_tag(@product.image_url, class: "img-responsive") %>
</p>

<p>
  <strong>Colour:</strong>
  <%= @product.colour %>
</p>

<p>
  <strong>Price: $</strong>
  <%= @product.price %>
</p>

<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>">
</div> 
</p>

<%= form_tag "/payments/create" do %>
  <%= render partial: "stripe_checkout_button" %>


<%= render 'new_comment'%>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<% end %>